<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.report.ReportResultFragment">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/result_report"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:padding="30dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- LinearLayout to contain all content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Section for Operational Costs -->
            <TextView
                android:id="@+id/tv_biaya_operasional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Operasional:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/tv_biaya_pakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Pakan: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_biaya_tenaga_kerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Tenaga Kerja: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_biaya_lainnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Lainnya: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_total_biaya_operasional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Biaya Operasional: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <!-- Section for Production Data -->
            <TextView
                android:id="@+id/tv_data_produksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Produksi:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/tv_jumlah_ikan_dibudidayakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Ikan Dibudidayakan: 0 ekor"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_jumlah_ikan_terjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Ikan Terjual: 0 ekor"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <!-- Section for Revenue -->
            <TextView
                android:id="@+id/tv_pendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendapatan:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/tv_harga_jual_per_ikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Jual per Ikan: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_total_pendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Pendapatan: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />

            <!-- Section for Profit -->
            <TextView
                android:id="@+id/tv_keuntungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keuntungan:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <!-- Section for Profit Prediction -->
            <TextView
                android:id="@+id/tv_prediksi_keuntungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prediksi Keuntungan:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/tv_prediksi_keuntungan_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prediksi Keuntungan Bulan Ini: Rp 0"
                android:textSize="16sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="8dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
