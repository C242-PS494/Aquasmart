<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    tools:context=".ui.auth.profile.ProfileActivity">


    <FrameLayout
        android:id="@+id/bubble_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText,MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/white"
        app:backgroundTint="@color/dongker"
        app:cornerRadius="12dp"
        app:elevation="8dp"
        android:text="@string/update_picture"
        android:fontFamily="@font/poppins_reguler"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameProfileLayout"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:hint="@string/fullname"
        android:textColorHint="@color/dongker"
        app:boxCornerRadiusTopStart="12dp"
        app:iconTint="@color/white"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxBackgroundColor="#E0F7FA"
        app:boxBackgroundMode="filled"
        app:endIconDrawable="@drawable/baseline_person_pin_24"
        app:endIconMode="custom"
        app:layout_constraintTop_toBottomOf="@id/btnPickImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameProfile"
            android:layout_width="match_parent"
            android:fontFamily="@font/poppins_reguler"
            android:layout_height="wrap_content"
            android:enabled="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailProfileLayout"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:textColorHint="@color/dongker"
        app:boxBackgroundColor="#E0F7FA"
        app:boxBackgroundMode="filled"
        app:endIconDrawable="@drawable/baseline_email_24"
        app:endIconMode="custom"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/nameProfileLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailProfile"
            android:fontFamily="@font/poppins_reguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneProfileLayout"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number"
        android:textColorHint="@color/dongker"
        app:boxBackgroundColor="#E0F7FA"
        app:boxBackgroundMode="filled"
        app:endIconDrawable="@drawable/baseline_phone_enabled_24"
        app:endIconMode="custom"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/emailProfileLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneProfile"
            android:fontFamily="@font/poppins_reguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/birthdateProfileLayout"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:hint="@string/birth_date"
        android:textColorHint="@color/dongker"
        app:boxBackgroundColor="#E0F7FA"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:endIconDrawable="@drawable/baseline_date_range_24"
        app:endIconMode="custom"
        app:layout_constraintTop_toBottomOf="@id/phoneProfileLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/birthdateProfile"
            android:fontFamily="@font/poppins_reguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_reguler"
        android:text="@string/Logout"
        app:icon="@drawable/baseline_logout_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birthdateProfileLayout"
        app:rippleColor="@color/white"
        app:backgroundTint="@color/dongker"
        app:cornerRadius="12dp"
        app:elevation="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>