<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_water">

    <fragment
        android:id="@+id/navigation_water"
        android:name="com.example.aquasmart.ui.water.WaterFragment"
        android:label="@string/title_monitor"
        tools:layout="@layout/fragment_water" >
        <action
            android:id="@+id/action_navigation_water_to_waterResultFragment"
            app:destination="@id/waterResultFragment" />
        <action
            android:id="@+id/action_navigation_water_to_profileActivity"
            app:destination="@id/profileActivity" />
    </fragment>

    <fragment
        android:id="@+id/navigation_predict"
        android:name="com.example.aquasmart.ui.predict.PredictFragment"
        android:label="@string/title_predict"
        tools:layout="@layout/fragment_predict" >
        <action
            android:id="@+id/action_navigation_predict_to_profileActivity"
            app:destination="@id/profileActivity" />
        <action
            android:id="@+id/action_navigation_predict_to_predictResultFragment"
            app:destination="@id/predictResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_guide"
        android:name="com.example.aquasmart.ui.guide.GuideFragment"
        android:label="@string/title_guide"
        tools:layout="@layout/fragment_guide" />
    <fragment
        android:id="@+id/navigation_weather"
        android:name="com.example.aquasmart.ui.weather.WeatherFragment"
        android:label="@string/weather"
        tools:layout="@layout/fragment_weather" />
    <fragment
        android:id="@+id/navigation_report"
        android:name="com.example.aquasmart.ui.report.ReportFragment"
        android:label="@string/report"
        tools:layout="@layout/fragment_report" />
    <fragment
        android:id="@+id/waterResultFragment"
        android:name="com.example.aquasmart.ui.water.water_result.WaterResultFragment"
        android:label="Water Result"
        tools:layout="@layout/fragment_water_result" >
        <action
            android:id="@+id/action_waterResultFragment_to_navigation_water"
            app:destination="@id/navigation_water" />
    </fragment>
    <activity
        android:id="@+id/profileActivity"
        android:name="com.example.aquasmart.ui.auth.profile.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile" />
    <fragment
        android:id="@+id/predictResultFragment"
        android:name="com.example.aquasmart.ui.predict.predict_result.PredictResultFragment"
        android:label="Harvest Prediction Result"
        tools:layout="@layout/fragment_predict_result" />
</navigation>